# MongoDB connection (for Node.js and Vercel)
MONGODB_URI=mongodb+srv://user:password@cluster.mongodb.net
MONGODB_DATABASE=toran_proxy

# Redis connection (for Node.js and Vercel)
REDIS_URL=redis://localhost:6379

# MongoDB Atlas Data API (for Cloudflare Workers)
MONGODB_DATA_API_URL=https://data.mongodb-api.com/app/data-xxx/endpoint/data/v1
MONGODB_DATA_API_KEY=your-api-key

# Upstash Redis (for Cloudflare Workers)
UPSTASH_REDIS_URL=https://xxx.upstash.io
UPSTASH_REDIS_TOKEN=your-token

# Optional: Proxy config as JSON (required for Cloudflare Workers)
# PROXY_CONFIG={"upstreams": {...}}

# Server port (for local development)
PORT=3000
